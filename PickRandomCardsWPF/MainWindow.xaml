<Window x:Name="Card_Picker" x:Class="PickRandomCardsWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PickRandomCardsWPF"
        mc:Ignorable="d"
        Title="Card Picker" Height="450" Width="800">
    <Grid>

        <ListBox x:Name="listOfCards" HorizontalAlignment="Left" Height="399" Margin="565,10,0,0" VerticalAlignment="Top" Width="217"/>

        <Button Content="Pick Some Cards" HorizontalAlignment="Left" Margin="185,225,0,0" VerticalAlignment="Top" Width="137" Height="24" FontWeight="Bold" Click="Button_Click">
            <Button.Background>
                <SolidColorBrush Color="#FFDDDDDD"/>
            </Button.Background>
        </Button>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="120,98,390,260" >
            <Label Content="How many cards should I pick?" FontSize="20" />
            <Slider x:Name="numberOfCards" Minimum="1" Maximum="20" Foreground="Black" IsSnapToTickEnabled="True" TickPlacement="TopLeft" IsDirectionReversed="True" AutoToolTipPlacement="TopLeft" />
        </StackPanel>

    </Grid>
</Window>
